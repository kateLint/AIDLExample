<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <Button
        android:text="Display Serial Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:id="@+id/button_serial"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:text="Display Version Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_serial"
        android:layout_alignLeft="@+id/button_serial"
        android:layout_alignStart="@+id/button_serial"
        android:layout_marginTop="46dp"
        android:id="@+id/button_version_code" />
</RelativeLayout>